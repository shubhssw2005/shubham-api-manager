# Database Configuration - ScyllaDB + FoundationDB (Replaces MongoDB)
SCYLLA_HOSTS=127.0.0.1
SCYLLA_DATACENTER=datacenter1
SCYLLA_KEYSPACE=global_api
SCYLLA_USERNAME=
SCYLLA_PASSWORD=

# FoundationDB Configuration
FDB_CLUSTER_FILE=./foundationdb/fdb.cluster
FDB_API_VERSION=710

# JWT Secret (Change this to a secure random string in production)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Environment
NODE_ENV="development"

# Next.js
NEXTAUTH_URL=http://localhost:3005
NEXTAUTH_SECRET="your-nextauth-secret-key"

# AWS Configuration for Event Streaming & Archival
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-here
AWS_SECRET_ACCESS_KEY=your-aws-secret-key-here
EVENT_BUCKET_NAME=your-event-stream-bucket
ARCHIVE_BUCKET_NAME=your-archive-bucket

# MinIO Configuration
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BACKUP_BUCKET=user-data-backups

# Data Management Settings
ENABLE_S3_ARCHIVE=false
OUTBOX_BATCH_SIZE=100
ARCHIVE_RETENTION_DAYS=90
OUTBOX_CLEANUP_DAYS=30

# Lifecycle Settings
HOT_STORAGE_DAYS=30
WARM_STORAGE_DAYS=180
COLD_STORAGE_DAYS=365

# Groot.com Integration
GROOT_SECRET=groot-super-secret-key-change-in-production
GROOT_DOMAIN=groot.com

# Data Export Settings
EXPORTS_BUCKET_NAME=user-data-exports
TEMP_EXPORT_DIR=/tmp/exports
EXPORT_RETENTION_HOURS=48

# S3 Backup Configuration (kept for compatibility)
S3_BACKUP_BUCKET=your-app-user-backups