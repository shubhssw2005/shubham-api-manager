{
    "version": 3,
    "configurePresets": [
        {
            "name": "conan-debug",
            "displayName": "Conan Debug",
            "description": "Debug build using Conan dependencies",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/Debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/build/Debug/generators/conan_toolchain.cmake"
            }
        },
        {
            "name": "conan-release",
            "displayName": "Conan Release", 
            "description": "Release build using Conan dependencies",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/Release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/build/Release/generators/conan_toolchain.cmake"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "conan-debug",
            "configurePreset": "conan-debug",
            "displayName": "Debug Build"
        },
        {
            "name": "conan-release", 
            "configurePreset": "conan-release",
            "displayName": "Release Build"
        }
    ],
    "testPresets": [
        {
            "name": "conan-debug",
            "configurePreset": "conan-debug",
            "displayName": "Debug Tests"
        },
        {
            "name": "conan-release",
            "configurePreset": "conan-release", 
            "displayName": "Release Tests"
        }
    ]
}